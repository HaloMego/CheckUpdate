<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_top"
    android:layout_width="246dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="57dp"
    android:layout_marginTop="175dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/update_header_bg"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/update_header"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/update_tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="版本：1.2.3"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/update_tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="大小 ：12.3M"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@mipmap/update_close"
            />


    </FrameLayout>


    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/update_content_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="17dp">

            <TextView
                android:id="@+id/tv_update_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1，xxxxxxxx\n2，ooooooooo\n1，xxxxxxxx\n2，ooooooooo\n1，xxxxxxxx\n2，ooooooooo\n1，xxxxxxxx\n2，ooooooooo\n1，xxxxxxxx\n2，ooooooooo\n1，xxxxxxxx\n2，ooooooooo\n1，xxxxxxxx\n2，ooooooooo\n1，xxxxxxxx\n2，ooooooooo\n"
                android:textColor="#666"
                android:textSize="14sp"/>

        </ScrollView>

        <Button
            android:layout_width="176dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/update_tv_update"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>


    </LinearLayout>


</LinearLayout>
